<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHuise"
    android:weightSum="1">
<include
    layout="@layout/wode_zhuce"
    >
</include>

    <EditText
        android:layout_marginTop="80dp"
        android:layout_marginLeft="39dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="   手机号"
        android:background="@color/colorBaise"
        android:id="@+id/Et_zhuche_shoujihao"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
   <EditText
       android:layout_marginLeft="39dp"
       android:layout_width="180dp"
       android:layout_marginTop="10dp"
         android:id="@+id/Et_zhuche_yanzhen"
         android:hint="   验证码"
       android:background="@color/colorBaise"
       android:layout_height="50dp"

       />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="获取验证码"
        android:background="@color/colorBaise"
        android:textColor="@color/colorCunhong"
        />
</LinearLayout>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <EditText
        android:layout_marginLeft="39dp"
        android:layout_width="282dp"
        android:layout_marginTop="8dp"
        android:id="@+id/Et_zhuche_mima"
        android:hint="   密码"
        android:background="@color/colorBaise"
        android:layout_height="50dp"

        android:layout_weight="0.01" />
    <ImageButton
      android:layout_marginLeft="285dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zhuche"
        android:layout_marginTop="24dp"
        android:layout_weight="0.01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
  </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <RadioButton
            android:id="@+id/RadioBt_tongyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="   我已阅读并同意"
            android:layout_marginLeft="39dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="使用条款和隐私政策"
            android:textColor="#00ffff"
            />
    </LinearLayout>

    <Button
        android:layout_width="51dp"
        android:layout_height="wrap_content"
      android:background="@drawable/button"
        android:layout_marginLeft="170dp"
        android:id="@+id/BTwode_zhuche"
    android:layout_marginTop="10dp"
        android:textColor="@color/colorCunhong"
        android:text="注册"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:src="@drawable/first_buy"
        android:id="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>
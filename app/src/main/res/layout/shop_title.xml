<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="10dp"

        android:layout_gravity="center_vertical"
       android:background="@drawable/wode_fanhui" />

    <TextView
        android:id="@+id/shop_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="商品详情" />

    <ImageView
        android:id="@+id/shop_title_car"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10px"
        android:src="@drawable/goods_shopping_cart" />

    <ImageView
        android:id="@+id/shop_title_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="20px"
        android:clickable="true"
        android:background="@drawable/fenxian"/>
</LinearLayout>
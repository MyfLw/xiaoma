<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageButton
                android:id="@+id/ImagBt_fanhui_xianjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wode_fanhui"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的现金劵"
            android:textSize="20sp"
            android:textColor="@color/colorHeise"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            />
        <TextView
            android:id="@+id/Tv_wodeXianjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用说明"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:onClick="teru"
            />
    </LinearLayout>
    <com.bwei.yunifang.view.activity.view.XListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/List_wodexianjin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.bwei.yunifang.view.activity.view.XListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_coupon_empty"

        android:layout_marginTop="150dp"
        android:layout_marginLeft="120dp"
        />
    <ImageView
        android:id="@+id/Imag_wode_xianjin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_data"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="140dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你还没有现金劵哦"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="270dp"
        android:textColor="@color/colorHeise"
        />


</RelativeLayout>